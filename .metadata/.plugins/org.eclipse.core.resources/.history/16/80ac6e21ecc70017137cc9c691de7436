package com.yyh;

class ListNode {
	int val;
	ListNode next;
	ListNode(int x) { 
		val = x; 
	}
}
public class Solution {
	public ListNode oddEvenList(ListNode head) {
        if (head == null) return null;
        ListNode preTail = head;
        while (preTail.next != null){
            preTail = preTail.next;
        }
        ListNode tail = preTail;
        ListNode cur = head;
        while (cur != preTail && cur.next != preTail){
            tail.next = cur.next;
            cur.next = cur.next.next;
            tail = tail.next;
            tail.next = null;
            cur = cur.next;
        }
        if (cur.next == preTail){
            tail.next = cur.next;
            cur.next = cur.next.next;
            tail = tail.next;
            tail.next = null;
        }
        return head;
    }
}
