package com.yyh;

public class Solution {
	if (nums == null || nums.length <= 1) return;
    for (int i = 0; i < nums.length - 1; i++){
        if (i % 2 == 0){
            if (nums[i] > nums[i + 1]){
                int tmp = nums[i];
                nums[i] = nums[i + 1];
                nums[i + 1] = tmp;
            }
        } else {
            if (nums[i] < nums[i + 1]){
                int tmp = nums[i];
                nums[i] = nums[i + 1];
                nums[i + 1] = tmp;
            }
        }
    }
}
